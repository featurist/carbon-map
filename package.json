{
  "name": "carbon-neutral",
  "private": true,
  "scripts": {
    "build": "./bin/webpack",
    "dev": "./bin/webpack-dev-server",
    "lint": "prettier '**/*.{rb,js,json,md,yml}' --write; eslint '**/*.js' --fix; stylelint 'frontend/styles/**/*.css' --fix; bundle exec rubocop -a -r ./config/exclude_corrected_formatter -f ExcludeCorrectedFormatter; bundle exec rails_best_practices . --silent",
    "postinstall": "cp node_modules/leaflet/dist public/leaflet -r"
  },
  "dependencies": {
    "@rails/actioncable": "^6.0.0-alpha",
    "@rails/activestorage": "^6.0.0-alpha",
    "@rails/ujs": "^6.0.0-alpha",
    "@rails/webpacker": "^4.0.7",
    "leaflet": "^1.5.1",
    "leaflet-gesture-handling": "^1.1.8",
    "leaflet.markercluster": "^1.4.1",
    "postcss-custom-media": "^7.0.8",
    "postcss-inherit": "^4.1.0",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "postcss-size": "^3.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-suitcss": "^14.0.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "suitcss-base": "^5.0.0",
    "suitcss-components-alert": "^1.3.0",
    "suitcss-components-button": "^6.0.2",
    "suitcss-components-form-field": "^2.0.0",
    "suitcss-utils-display": "^1.0.2",
    "suitcss-utils-text": "^1.0.0",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@prettier/plugin-ruby": "^0.15.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "webpack-dev-server": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{rb,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "Gemfile": [
      "bundle exec rubocop -a -r ./config/exclude_corrected_formatter -f ExcludeCorrectedFormatter --force-exclusion",
      "git add"
    ],
    "*.{rb,erb}": [
      "bundle exec rubocop -a -r ./config/exclude_corrected_formatter -f ExcludeCorrectedFormatter --force-exclusion",
      "bundle exec rails_best_practices . --silent",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
