<%= form_with(model: group, local: true, html: {class: 'Form'}) do |f| %>
  <%= render 'partials/form_errors', resource: group %>

  <%= render 'groups/form_fields', f: f, group: group, group_types: group_types %>

  <div class="FormField-actions">
    <%= f.submit class: 'Button Button--success Button--large' %>
  </div>
<% end %>
