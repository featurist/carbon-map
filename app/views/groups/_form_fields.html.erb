<%= f.form_field :name, required: true do %>
  <%= f.label :name %>
  <%= f.text_field :name %>
<% end %>

<%= f.form_field :abbreviation, required: true do %>
  <%= f.label :abbreviation %>
  <%= f.text_field :abbreviation %>
<% end %>

<%= f.form_field :types, required: true do %>
  <%= f.label :types, 'Group Types' %>
  <%= f.select :types, options_for_select(group_types, group.types.map(&:group_type).map(&:id)), {}, size: group_types.size, multiple: true %>
<% end %>

<h2>Websites & Social Media</h2>
<div id="group_websites" class="CollectionItem-container">
  <table>
    <thead>
      <tr>
        <th>Website</th>
        <th>Delete?</th>
      </tr>
    </thead>

    <tbody>
      <%= f.fields_for :websites do |website_form| %>
        <%= render 'partials/website_fields_row', f: website_form %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="FormField">
  <%= f.fields_for :websites, GroupWebsite.new do |website_form| %>
    <%= add_object_link 'Add website', 'group_websites', :partial => 'partials/website_fields_row', :locals => { :f => website_form } %>
  <% end %>
</div>

<h2>Contact</h2>
<%= f.form_field :contact_name, required: true do %>
  <%= f.label :contact_name %>
  <%= f.text_field :contact_name %>
<% end %>

<%= f.form_field :contact_email, required: true do %>
  <%= f.label :contact_email %>
  <%= f.text_field :contact_email %>
<% end %>

<%= f.form_field :contact_phone, required: true do %>
  <%= f.label :contact_phone %>
  <%= f.text_field :contact_phone %>
<% end %>

<%= f.form_field :consent_to_share do %>
  <%= f.check_box :consent_to_share, 'Are you willing to share the information provided publicly, and have you gained permission to do so from anyone referenced?' %>
<% end %>
