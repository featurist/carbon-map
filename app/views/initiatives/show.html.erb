<% title @initiative.name %>

<div class="u-mbL">
  <%= render 'partials/breadcrumb', items: [
    link_to('Home', root_path),
    link_to(@district.name, @district),
    link_to(@ward.name, @ward),
    link_to(@parish.name, @parish),
    title
  ] %>
</div>

<div class="PageHeader u-mbL">
  <h1 class="PageHeader-heading"><%= title %></h1>
  <p>Status: <%=@initiative.status_name%></p>
</div>

<div class="Initiative">
  <%=render 'initiative_info', initiative: @initiative, show_map: true%>
</div>
