<% content_for :page_javascript do %>
  <script type="text/json" id="initiatives_json"><%=@initiatives_json.html_safe%></script>
  <%= javascript_packs_with_chunks_tag 'initiatives_map', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :raw do %>
  <section class="Explore">
    <a name="explore"></a>
    <h1>Explore</h1>
    <nav class="Explore-navigation">
      <a onclick="exploreMap.showAll()">All</a>
      <a onclick="exploreMap.filter('sector', 'Food')">Food</a>
      <a onclick="exploreMap.filter('sector', 'Energy')">Energy</a>
      <a onclick="exploreMap.filter('sector', 'Transport')">Transport</a>
      <a onclick="exploreMap.filter('sector', 'Waste')">Waste</a>
      <a onclick="exploreMap.filter('sector', 'Building')">Building</a>
      <a onclick="exploreMap.filter('sector', 'Knowledge')">Knowledge</a>
      <a onclick="exploreMap.filter('sector', 'Nature')">Nature</a>
      <a onclick="exploreMap.filter('sector', 'Materials')">Materials</a>
    </nav>
    <div class="Explore-map" id="explore">
    </div>
  </section>
<% end %>
